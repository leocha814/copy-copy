# 5,000원 소액 테스트 설정
# 이 파일을 .env로 복사해서 사용하세요

# Upbit API Credentials
UPBIT_API_KEY=your_api_key_here
UPBIT_API_SECRET=your_api_secret_here
TESTNET=true

# Trading Parameters - 비트코인만 1분봉으로 빠른 테스트
TRADING_SYMBOLS=BTC/KRW
TIMEFRAME=1m

# Strategy Parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
BB_PERIOD=20
BB_STD_DEV=2.0
ADX_THRESHOLD_LOW=20
ADX_THRESHOLD_HIGH=25
ADX_PERIOD=14
ATR_PERIOD=14

# Risk Management - 소액 테스트용 설정
PER_TRADE_RISK=1.0        # 한 번에 1%만 (5000원의 1% = 50원)
MAX_DAILY_LOSS=2.0        # 하루 최대 2% 손실 (100원)
MAX_CONSECUTIVE_LOSSES=2  # 연속 2번 손실 후 중단
MAX_DRAWDOWN=5.0          # 최대 5% 낙폭 (250원)
MAX_POSITION_SIZE=100.0   # 계좌의 100% 사용 가능 (5000원 전체)
STOP_ATR_MULTIPLIER=2.0   # 손절: ATR x 2
TARGET_ATR_MULTIPLIER=3.0 # 익절: ATR x 3

# Telegram Alerts (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# System - 빠른 체크 (1분마다)
LOG_DIR=logs
CHECK_INTERVAL_SECONDS=60
