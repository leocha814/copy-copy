# Upbit API Credentials
UPBIT_API_KEY=your_api_key_here
UPBIT_API_SECRET=your_api_secret_here
TESTNET=false

# Mode / Balance (100% 잔액 매매 반복 플로우 전제)
DRY_RUN=true
INITIAL_BALANCE=1000000

# Trading Parameters - Scalping
TRADING_SYMBOLS=XRP/KRW
TIMEFRAME=1m

# Strategy Parameters - Optimized for scalping
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
RSI_EXIT_NEUTRAL=50
BB_PERIOD=20
BB_STD_DEV=2.0
ADX_THRESHOLD_LOW=15
ADX_THRESHOLD_HIGH=25
ADX_PERIOD=14
ATR_PERIOD=14

# Scalping Entry/Exit Parameters
ENTRY_COOLDOWN_SECONDS=30
BB_WIDTH_MIN=0.3
BB_WIDTH_MAX=15.0
TIME_STOP_MINUTES=5

# Risk Management - 방어 한도 최소화 (플로우 중단 방지)
PER_TRADE_RISK=5.0
MAX_DAILY_LOSS=10.0
MAX_CONSECUTIVE_LOSSES=5
MAX_DRAWDOWN=20.0
MAX_POSITION_SIZE=50.0

# Fixed Stop/Target for Scalping (percentage)
USE_FIXED_STOPS=true
FIXED_STOP_LOSS_PCT=0.35
FIXED_TAKE_PROFIT_PCT=0.90
FALLBACK_STOP_ATR_MULTIPLIER=2.0
FALLBACK_TARGET_ATR_MULTIPLIER=3.0

# Execution config (메이커 우선, 시장가 시 슬리피지 축소)
DEFAULT_ORDER_TYPE=limit
LIMIT_ORDER_TIMEOUT_SECONDS=3
MAX_SLIPPAGE_PCT=0.3
AMOUNT_PRECISION=8
PRICE_PRECISION=2

# Telegram Alerts (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# System - Scalping mode
LOG_DIR=logs
CHECK_INTERVAL_SECONDS=20
